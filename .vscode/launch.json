{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Debug (uvicorn)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "jinja": true,
            "justMyCode": true
        }
    ]
}